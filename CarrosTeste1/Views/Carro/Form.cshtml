@model CarrosTeste1.Models.Carro

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Carro" asp-action="Update" method="post">
                <div class="form-group">
                    <label asp-for="Nome">Nome</label>
                    <input class="form-control" type="text" asp-for="Nome" />
                </div>


                <div class="form-group">
                    <label asp-for="Valor">Valor</label>
                    <input class="form-control" type="number" asp-for="Valor" />
                </div>

                <button class="btn btn-dark" type="submit">Salvar</button>
            </form>
        </div>
    </div>